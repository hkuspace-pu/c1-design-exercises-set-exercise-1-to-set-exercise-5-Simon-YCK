<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_app_warm">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@color/color_surface"
        android:elevation="4dp">

        <include
            layout="@layout/include_back_button"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Manage Menu"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/color_text_primary"
            android:fontFamily="serif"/>

        <Button
            android:id="@+id/btnAddNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Add"
            android:drawableStart="@drawable/ic_add_24"
            android:drawableTint="@color/color_on_secondary"
            android:drawablePadding="6dp"
            android:backgroundTint="@color/color_secondary"
            android:textColor="@color/color_on_secondary"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- RECYCLERVIEW REPLACEMENT -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"/>

</LinearLayout>

