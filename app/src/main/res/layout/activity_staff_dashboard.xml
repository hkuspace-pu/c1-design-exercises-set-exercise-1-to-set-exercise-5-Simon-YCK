<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF6B35"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Staff!"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="32dp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/manageMenuButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Manage Menu"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF6B35"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:drawablePadding="16dp"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:elevation="6dp" />

            <Button
                android:id="@+id/viewReservationsButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="View Reservations"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3"
                android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                android:drawablePadding="16dp"
                android:padding="16dp"
                android:elevation="6dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
