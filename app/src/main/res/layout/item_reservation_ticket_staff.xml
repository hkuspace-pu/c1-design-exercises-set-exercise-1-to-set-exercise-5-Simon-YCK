<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/color_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Guest Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- guestName -->
            <TextView
                android:id="@+id/guestName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="John Doe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/color_text_primary"/>

            <!-- Status badge -->
            <TextView
                android:id="@+id/reservationStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIVE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/color_guest_badge_text"
                android:background="@drawable/bg_guest_badge"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Date & Time Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… "
                android:textSize="16sp"/>

            <!-- reservationDate -->
            <TextView
                android:id="@+id/reservationDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jan 28, 2026"
                android:textSize="14sp"
                android:textColor="@color/color_text_secondary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ• "
                android:textSize="16sp"
                android:layout_marginStart="16dp"/>

            <!-- reservationTime -->
            <TextView
                android:id="@+id/reservationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:30 PM"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color_primary"/>
        </LinearLayout>

        <!-- Guests Count -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¥ "
                android:textSize="16sp"/>

            <!-- guestCount -->
            <TextView
                android:id="@+id/guestCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Guests"
                android:textSize="14sp"
                android:textColor="@color/color_text_secondary"/>
        </LinearLayout>

        <!-- special requests section -->
        <LinearLayout
            android:id="@+id/specialRequestsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Special Requests:"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/color_primary"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/specialRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vegetarian menu"
                android:textSize="13sp"
                android:textColor="@color/color_text_secondary"
                android:textStyle="italic"
                android:background="@drawable/bg_input_rounded"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Edit button -->
            <Button
                android:id="@+id/btnEditReservation"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="âœï¸ Edit"
                android:textSize="12sp"
                android:backgroundTint="@color/color_primary"
                android:textColor="@color/color_on_primary"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <!-- btnCancelReservation -->
            <Button
                android:id="@+id/btnCancelReservation"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="ðŸ—‘ï¸ Cancel"
                android:textSize="12sp"
                android:backgroundTint="@color/color_error"
                android:textColor="@color/color_on_error"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
