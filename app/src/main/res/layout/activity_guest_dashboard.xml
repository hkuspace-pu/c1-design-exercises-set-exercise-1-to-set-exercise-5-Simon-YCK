<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF6B35"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, Guest!"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center" />

            <!-- Book Table Button-->
            <LinearLayout
                android:id="@+id/bookTableButton"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_marginBottom="16dp"
                android:background="#0066FF"
                android:clickable="true"
                android:elevation="8dp"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Large Calendar Icon -->
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="Calendar icon"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    android:tint="#FFFFFF" />

                <!-- Book Table Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Book Table"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:text="Reserve your dining experience"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Browse Menu Button-->
            <Button
                android:id="@+id/browseMenuButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ðŸ½ï¸  Browse Menu"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:backgroundTint="#FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="32dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@android:drawable/dialog_holo_light_frame" />

            <!-- Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp" />

            <!-- My Reservations Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Reservations"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Reservations Table-->
            <LinearLayout
                android:id="@+id/reservationsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F5F5F5" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
