<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_app_warm">

    <!-- ===== TOP BAR: Welcome + Notification + Profile ===== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@android:color/transparent">

        <!-- Welcome Text (Left) -->
        <LinearLayout
            android:id="@+id/welcomeSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome,"
                android:textSize="14sp"
                android:textColor="@color/color_text_secondary"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/guestNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest"
                android:textSize="22sp"
                android:textColor="@color/color_text_primary"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Notification Bell (Right Side, before Profile) -->
        <FrameLayout
            android:id="@+id/notificationButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toStartOf="@+id/profileAvatar"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <!-- Bell Icon (Vector) -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_notifications_24"
                android:tint="@color/color_text_secondary"
                android:contentDescription="Notifications" />

            <!-- Badge (Red Dot with Number) -->
            <TextView
                android:id="@+id/notificationBadge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_notification_badge"
                android:text="2"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"/>
        </FrameLayout>

        <!-- Profile Avatar (Right) -->
        <FrameLayout
            android:id="@+id/profileAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_profile_avatar"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <TextView
                android:id="@+id/avatarInitials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="G"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>
        </FrameLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ===== HERO ACTION: Book Table Button ===== -->
            <LinearLayout
                android:id="@+id/bookTableButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="160dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_button_gradient_pill"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:elevation="8dp"
                android:padding="24dp">

                <!-- Large Calendar Icon (Vector) -->
                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:alpha="0.92"
                    android:src="@drawable/ic_calendar_24"
                    android:tint="@color/color_on_primary"
                    android:contentDescription="Book" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book a Table"
                    android:textSize="24sp"
                    android:textColor="@color/color_on_primary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reserve your spot now"
                    android:textSize="14sp"
                    android:textColor="#E6E6FA"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"/>

            </LinearLayout>

            <!-- Browse Menu Button -->
            <LinearLayout
                android:id="@+id/browseMenuButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/bg_outline_button"
                android:gravity="center"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:padding="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_restaurant_24"
                    android:tint="@color/color_primary"
                    android:contentDescription="Browse menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse Menu"
                    android:textSize="18sp"
                    android:textColor="@color/color_primary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

            <!-- ===== MY RESERVATIONS: Ticket-Style Cards ===== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Reservations"
                android:textSize="20sp"
                android:textColor="@color/color_text_primary"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"/>

            <!-- Reservations Container (populated dynamically) -->
            <LinearLayout
                android:id="@+id/reservationsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"/>

            <!-- Empty State (if no reservations) -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_notifications_24"
                    android:tint="@color/color_text_muted"
                    android:alpha="0.6"
                    android:contentDescription="Empty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No reservations yet"
                    android:textSize="16sp"
                    android:textColor="#A0AEC0"
                    android:fontFamily="sans-serif-medium"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
