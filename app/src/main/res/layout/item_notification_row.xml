<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:layout_marginBottom="8dp">

    <!-- Icon -->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_guest_badge"
        android:src="@drawable/ic_notifications_24"
        android:tint="@color/color_guest_badge_text"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Notification" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notifTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Confirmed"
            android:textStyle="bold"
            android:textColor="@color/color_text_primary"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/notifMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your table for 2 is ready."
            android:textColor="@color/color_text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/notifDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just now"
            android:textSize="12sp"
            android:textColor="@color/color_text_muted"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</LinearLayout>
