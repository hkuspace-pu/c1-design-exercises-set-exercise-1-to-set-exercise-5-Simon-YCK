<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_input_rounded">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter &amp; Sort Reservations"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2D3748"
        android:layout_marginBottom="20dp"/>

    <!-- Sort By Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort By"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#667EEA"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/radioGroupSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/radioNewest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Newest First"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioOldest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oldest First"/>

        <RadioButton
            android:id="@+id/radioGuestName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guest Name (A-Z)"/>

        <RadioButton
            android:id="@+id/radioDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservation Date"/>
    </RadioGroup>

    <!-- Filter By Date Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter by Date"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#667EEA"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/radioGroupFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/radioAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Reservations"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today"/>

        <RadioButton
            android:id="@+id/radioThisWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This Week"/>

        <RadioButton
            android:id="@+id/radioUpcoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upcoming (Next 7 Days)"/>
    </RadioGroup>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnResetFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:backgroundTint="#718096"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnApplyFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:backgroundTint="#667EEA"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>
