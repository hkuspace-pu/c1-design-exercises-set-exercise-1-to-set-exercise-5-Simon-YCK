<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/color_primary_tint"
                android:endColor="@color/color_primary_tint"
                android:angle="135" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- Pressed / focused state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/color_primary_dark"
                android:endColor="@color/color_primary"
                android:angle="135" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- Default state (with subtle shadow) -->
    <item>
        <layer-list>
            <!-- Colored shadow layer -->
            <item
                android:top="4dp"
                android:left="2dp"
                android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#33000000" />
                    <corners android:radius="50dp" />
                </shape>
            </item>

            <!-- Main gradient button -->
            <item android:bottom="6dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/color_primary"
                        android:endColor="#764BA2"
                        android:angle="135" />
                    <corners android:radius="50dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>