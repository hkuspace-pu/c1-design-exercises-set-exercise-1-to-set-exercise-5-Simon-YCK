<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/colorControlHighlight">

    <!-- Mask keeps ripple circular -->
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="#FFFFFFFF" />
        </shape>
    </item>

    <!-- Content: white circle + arrow icon -->
    <item>
        <layer-list>
            <!-- Soft shadow -->
            <item
                android:top="2dp"
                android:left="2dp"
                android:right="2dp">
                <shape android:shape="oval">
                    <solid android:color="#20000000" />
                </shape>
            </item>

            <!-- Solid white circle -->
            <item android:bottom="2dp">
                <shape android:shape="oval">
                    <solid android:color="#FFFFFFFF" />
                    <stroke
                        android:width="1dp"
                        android:color="#E0E0E0" />
                </shape>
            </item>

            <!-- Arrow icon centered (black, always visible) -->
            <item
                android:drawable="@drawable/ic_arrow_back_24"
                android:gravity="center" />
        </layer-list>
    </item>

</ripple>
