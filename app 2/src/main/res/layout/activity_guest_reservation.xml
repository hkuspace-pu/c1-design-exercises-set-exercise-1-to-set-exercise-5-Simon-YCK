<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book a Table"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2D3748"
        android:layout_marginBottom="32dp"/>

    <!-- Name Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:textColor="#718096"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_input_rounded"
        android:paddingStart="16dp"
        android:layout_marginBottom="20dp"/>

    <!-- Date Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="#718096"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/dateInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_input_rounded"
        android:focusable="false"
        android:clickable="true"
        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
        android:paddingStart="16dp"
        android:layout_marginBottom="20dp"/>

    <!-- Time & Guests Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Time -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="#718096"
                android:layout_marginBottom="8dp"/>
            <Spinner
                android:id="@+id/timeSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_rounded"/>
        </LinearLayout>

        <!-- Guests -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guests"
                android:textColor="#718096"
                android:layout_marginBottom="8dp"/>
            <SeekBar
                android:id="@+id/guestsSeekBar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:max="10"
                android:progress="2"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/guestsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 People"
        android:layout_gravity="end"
        android:textColor="#667EEA"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special Requests (Optional)"
        android:textColor="#718096"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/specialRequestsInput"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_input_rounded"
        android:hint="Any dietary requirements?"
        android:gravity="top"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:layout_marginBottom="40dp"/>


    <!-- Confirm Button -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Confirm Booking"
        android:background="@drawable/bg_button_gradient_pill"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

</LinearLayout>
