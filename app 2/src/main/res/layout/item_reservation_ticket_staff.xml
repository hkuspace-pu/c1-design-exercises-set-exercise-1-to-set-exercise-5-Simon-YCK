<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_reservation_ticket"
    android:padding="20dp"
    android:layout_marginBottom="16dp"
    android:elevation="2dp">

    <!-- Date -->
    <TextView
        android:id="@+id/reservationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday, Nov 29"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2D3748"
        android:layout_marginBottom="8dp"/>

    <!-- Time + Guests -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ•"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/reservationTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="7:00 PM"
            android:textSize="16sp"
            android:textColor="#4A5568"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¥"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/guestCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 guests"
            android:textSize="16sp"
            android:textColor="#4A5568"/>
    </LinearLayout>

    <!-- Guest Name -->
    <TextView
        android:id="@+id/guestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="16sp"
        android:textColor="#718096"
        android:layout_marginBottom="16dp"/>

    <!-- Delete Button -->
    <Button
        android:id="@+id/btnCancelReservation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="ðŸ—‘ï¸  Cancel Reservation"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E53E3E"
        android:textStyle="bold"/>

</LinearLayout>
